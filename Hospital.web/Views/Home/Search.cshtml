@model Hospital.dll.Model.SearchViewModel

<style>
    .search-results {
        margin-top: 20px;
    }

        .search-results table {
            width: 100%;
            border-collapse: collapse;
        }

        .search-results th,
        .search-results td {
            padding: 8px;
            border: 1px solid #ccc;
        }

        .search-results th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .search-results .patient-details,
        .search-results .doctor-details
        .search-results .department-details {
            background-color: #ffffff;
        }
</style>

<h2>Search Results</h2>

<div class="search-results">
    @if (Model.Patient.Any())
    {
        <h3>Patient:</h3>
        <table>
            <tr>
                <th>Patient Name</th>
                <th>Age</th>
                <th>Gender </th>
                <th>Address</th>
                <th>Contact </th>
                <th>Status</th>


            </tr>
            @foreach (var patient in Model.Patient)
            {
                <tr>
                    <td>@patient.PatientName</td>
                    <td>@patient.Age</td>
                    <td>@patient.Gender</td>
                    <td>@patient.Address</td>
                    <td>@patient.Contact</td>
                    <td>@patient.Status</td>
                </tr>
            }
        </table>
    }

    @if (Model.Doctor.Any())
    {
        <h3>Doctor:</h3>
        <table>
            <tr>
                <th>Doctor Name</th>
                <th>Experience </th>
                <th>Qualification</th>
                <th>Department </th>
                <th>Contact </th>
                <th>Address</th>
                <th>Email</th>


            </tr>
            @foreach (var doctor in Model.Doctor)
            {
                <tr>
                    <td>@doctor.DoctorName</td>
                    <td>@doctor.Experience</td>
                    <td>@doctor.Qualification</td>
                    <td>@doctor.DepartmentId</td>
                    <td>@doctor.Contact</td>
                    <td>@doctor.Address</td>
                    <td>@doctor.Email</td>

                </tr>
            }
        </table>
    }


    @if (Model.Department.Any())
    {
        <h3>Department:</h3>
        <table>
            <tr>
                <th>Department Name</th>



            </tr>
            @foreach (var doctor in Model.Department)
            {
                <tr>
                    <td>@doctor.DepartmentName</td>

                </tr>
            }
        </table>
    }

</div>
